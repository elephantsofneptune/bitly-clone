
    <div id="table" class="container-fluid bg-2 text-center">
            <h2> Some Data </h2>
            <table class="table">
                <thead>
                    <tr>
                        <!-- <th>#</th>                                                                                                                                                                                          -->
                        <th>Long URL</th>
                        <th>Short URL</th>
                        <th>Count </th>
                    </tr>
                </thead>

                <tbody>
                    <% @urls.each_with_index do |url,i| %>
                    <tr>    
                            <!-- <td><%= i+1 %></td> -->
                            <td><%= "https://#{url.long_url}" %></td>
                            <td><a href="<%= url.short_url %>"><%= url.short_url %></a></td>
                            <td><%= url.count %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
    </div>